{
  "manifest_version": 3,
  "name": "TabMagic",
  "version": "1.2.0",
  "description": "Personal extension to change tab names.",
  "action": {
    "default_title": "TabMagic",
    "default_icon": {
      "128": "icons/TabMagic.ico"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["alarms", "contextMenus", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.ico", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/TabMagic.ico"
  }
}
